extends layout

block content
	.grid
		.grid-item.grid-item1.left
		.grid-item.grid-item2
			ul#hexGrid
				each p in postlist
					li.hex
						.hexIn
							.hexLink(onclick="document.location.href = '../post/#{p.number}'")
								img(src=p.url, alt='')
								h1.upperH1
									= p.title
								h1.downH1
									= p.short
								.downP
									a(href='author/'+p.author)
										= p.author
		.grid-item.grid-item3.right
	input#nav-toggle(type='checkbox', hidden='')
	nav.nav
		label.nav-toggle(for='nav-toggle', onclick='')
		h2.logo
			a(href='') TeeSite
		ul
			li
				a(target='_blank', href='https://teesite.herokuapp.com/') Главная
			li
				a(target='_blank', href='#2') О нас
			li
				a(target='_blank', href='https://github.com/TeeNik') Код
			li
				a(target='_blank', href='https://www.twitch.tv/') Twitch
			li
				a(target='_blank', href='https://vk.com/teenik3315') Vk
	.mask-content
